{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es6",
            "es2015",
            "dom"
        ],
        "declaration": true,
        "outDir": "lib",
        "rootDir": "src",
        "noImplicitAny": false,
        "strict": true,
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "downlevelIteration": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}